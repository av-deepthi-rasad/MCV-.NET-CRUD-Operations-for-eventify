
@model List<Event>

@{
    Layout = "_Layout";
}

  <h3>Events</h3>

@if (Model != null && Model.Count() > 0)
{
    <table class=" table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Event in Model)
            {
                <tr>
                    <td>@Event.Name</td>
                    <td>@Event.Description</td>
                    <td><a class=" btn btn-link" asp-controller="Events" asp-action="Edit" asp-route-id="@Event.EventId">Edit</a></td>
                    <td><a class=" btn btn-link" asp-controller="Events" asp-action="Delete" asp-route-eventid="@Event.EventId" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br/>
    <a class="btn btn-primary" asp-controller="Events" asp-action="Add" style="margin:10px;">Add</a>
}

@section Scripts{
    <script>
        function confirmDelete(){
            return confirm("Are you sure you want to delete this event?");
        }
    </script>
} 